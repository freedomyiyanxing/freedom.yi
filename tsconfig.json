{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      // 配置webpack 路径别名 ts文档 https://www.typescriptlang.org/docs/handbook/module-resolution.html#path-mapping
      "@components/*": [
        "./src/components/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@router/*": [
        "./src/router/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@type/*": [
        "./src/type/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
